---
import type { AlternativeHrefLang } from '@/types'

import { m } from '@/i18n/messages'

import HeaderLocaleSwitcher from './HeaderLocaleSwitcher.astro'
import HeaderNavigation from './HeaderNavigation.astro'
import HeaderThemeSwitcher from './HeaderThemeSwitcher.astro'

export interface Props {
  availableLanguages?: AlternativeHrefLang[]
}

const { availableLanguages = [] } = Astro.props

const navigationItems = [
  {
    href: '/posts',
    label: m.all_posts(),
  },
  {
    href: '/about',
    label: m.about(),
  },
]
---

<header>
  <HeaderNavigation items={navigationItems} />
  <HeaderThemeSwitcher />
  <HeaderLocaleSwitcher availableLanguages={availableLanguages} />
</header>
