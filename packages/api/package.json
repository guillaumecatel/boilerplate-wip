{
  "name": "@myorg/api",
  "version": "0.0.1",
  "type": "module",
  "license": "MIT",
  "description": "A centralized, type-safe API client designed to be shared across all applications in this monorepo.",
  "keywords": [
    "api",
    "client",
    "typescript"
  ],
  "homepage": "https://github.com/myorg/monorepo/packages/api#readme",
  "author": "My Org <contact@myorg.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/myorg/monorepo.git"
  },
  "bugs": {
    "url": "https://github.com/myorg/monorepo/issues"
  },
  "files": [
    "./dist"
  ],
  "exports": {
    ".": "./src/index.ts",
    "./errors": "./src/errors.ts",
    "./users": "./src/users/index.ts",
    "./validators": "./src/validators.ts",
    "./wrapper": "./src/wrapper.ts"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "require": "./dist/index.cjs",
        "types": "./dist/index.d.ts"
      },
      "./errors": {
        "import": "./dist/errors.js",
        "require": "./dist/errors.cjs",
        "types": "./dist/errors.d.ts"
      },
      "./users": {
        "import": "./dist/users/index.js",
        "require": "./dist/users/index.cjs",
        "types": "./dist/users/index.d.ts"
      },
      "./validators": {
        "import": "./dist/validators.js",
        "require": "./dist/validators.cjs",
        "types": "./dist/validators.d.ts"
      },
      "./wrapper": {
        "import": "./dist/wrapper.js",
        "require": "./dist/wrapper.cjs",
        "types": "./dist/wrapper.d.ts"
      }
    }
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "clean": "shx rm -rf {node_modules,.turbo,dist,coverage}"
  },
  "dependencies": {
    "@myorg/shared": "workspace:*",
    "wretch": "^3.0.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "3.2.4",
    "msw": "^2.12.0",
    "tsdown": "^0.15.6",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
